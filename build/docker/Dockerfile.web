# Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy solution and project files
COPY ["ApiHubSystem.sln", "."]
COPY ["Directory.Build.props", "."]
COPY ["Directory.Packages.props", "."]
COPY ["src/ApiHub.Domain/ApiHub.Domain.csproj", "src/ApiHub.Domain/"]
COPY ["src/ApiHub.Shared/ApiHub.Shared.csproj", "src/ApiHub.Shared/"]
COPY ["src/ApiHub.Application/ApiHub.Application.csproj", "src/ApiHub.Application/"]
COPY ["src/ApiHub.Infrastructure/ApiHub.Infrastructure.csproj", "src/ApiHub.Infrastructure/"]
COPY ["src/ApiHub.Web/ApiHub.Web.csproj", "src/ApiHub.Web/"]

# Restore packages
RUN dotnet restore "src/ApiHub.Web/ApiHub.Web.csproj"

# Copy source code
COPY ["src/", "src/"]

# Build
WORKDIR "/src/src/ApiHub.Web"
RUN dotnet build "ApiHub.Web.csproj" -c Release -o /app/build

# Publish
FROM build AS publish
RUN dotnet publish "ApiHub.Web.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Runtime stage
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

# Create non-root user
RUN adduser --disabled-password --gecos '' appuser
USER appuser

COPY --from=publish /app/publish .

ENTRYPOINT ["dotnet", "ApiHub.Web.dll"]

@inherits LayoutComponentBase

<div class="d-flex">
    <NavMenu />

    <main class="flex-grow-1" style="margin-left: 250px;">
        <div class="top-bar bg-white border-bottom px-4 py-2 d-flex justify-content-between align-items-center">
            <h5 class="mb-0">@GetPageTitle()</h5>
            <div class="d-flex align-items-center gap-3">
                <span class="text-muted">Welcome, User</span>
                <button class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </button>
            </div>
        </div>

        <div class="p-4">
            @Body
        </div>
    </main>
</div>

@code {
    private string GetPageTitle()
    {
        return "Dashboard";
    }
}
